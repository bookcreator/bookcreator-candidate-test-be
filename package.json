{
  "name": "little-link-function",
  "version": "1.0.0",
  "description": "URL shortener using good cloud run functions",
  "license": "ISC",
  "author": "Curtis Stokes",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "dev": "npx functions-framework --target local",
    "deploy:create": "gcloud functions deploy createLittleLink --source . --entry-point=createLittleLink --runtime=nodejs22 --trigger-http --allow-unauthenticated --set-env-vars=FIREBASE_DATABASE=$FIREBASE_DATABASE",
    "deploy:retrieve": "gcloud functions deploy retrieveLittleLink --source . --entry-point=retrieveLittleLink --runtime=nodejs22 --trigger-http --allow-unauthenticated --set-env-vars=FIREBASE_DATABASE=$FIREBASE_DATABASE",
    "deploy": "npm run deploy:create && npm run deploy:retrieve",
    "lint": "eslint --fix"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.11.0",
    "@google-cloud/functions-framework": "^3.4.5",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "jest-mock-req-res": "^1.0.2"
  }
}
